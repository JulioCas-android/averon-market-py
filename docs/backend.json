{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information for registered users.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["customer", "admin"],
          "description": "User role for authorization."
        }
      },
      "required": ["name", "email"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "image": { "type": "string" },
        "imageHint": { "type": "string" },
        "category": { "type": "string" },
        "onSale": { "type": "boolean" },
        "stock": { "type": "number", "description": "Quantity of the product in stock." },
        "condition": { "type": "string", "enum": ["Nuevo", "Usado", "Reacondicionado"], "description": "The condition of the product." },
        "color": { "type": "string", "description": "The color of the product." }
      },
      "required": ["name", "price", "category", "image", "stock", "condition"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order, for both guests and registered users.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the registered user, if applicable."
        },
        "customerRazonSocial": { "type": "string" },
        "customerRuc": { "type": "string" },
        "customerEmail": { "type": "string", "format": "email" },
        "shippingAddress": { "type": "string" },
        "shippingCity": { "type": "string" },
        "shippingPhone": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["productId", "name", "quantity", "price"]
          }
        },
        "total": { "type": "number" },
        "status": {
          "type": "string",
          "enum": ["Procesando", "Pendiente de Pago", "Pagado", "Enviado", "Entregado", "Cancelado"]
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "paymentMethod": {
          "type": "string",
          "description": "The payment method selected by the customer."
        },
        "thirdPartyReceiver": {
          "type": "boolean",
          "description": "Indicates if a third party will receive the order."
        },
        "thirdPartyName": {
          "type": "string",
          "description": "The full name of the third-party receiver."
        },
        "thirdPartyId": {
          "type": "string",
          "description": "The ID number of the third-party receiver."
        }
      },
      "required": ["customerRazonSocial", "customerRuc", "customerEmail", "shippingAddress", "items", "total", "status", "createdAt", "paymentMethod", "thirdPartyReceiver"]
    }
  },
  "auth": {
    "providers": ["email", "google.com"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/backend/entities/Product" },
      "description": "Stores individual product details."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Stores public user profile information, linked to their authentication UID."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/backend/entities/Order" },
      "description": "Stores all customer orders."
    }
  }
}
