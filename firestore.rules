
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función auxiliar para verificar si el usuario tiene el rol de 'admin'.
    // Esto se usa para proteger las operaciones de escritura (crear, actualizar, eliminar).
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // COLECCIÓN: products
    // Simplificamos la regla: 'read' combina 'get' (leer un documento) y 'list' (leer una colección).
    // Esto permite que CUALQUIER persona (autenticada o no) vea los productos.
    // Solo los administradores pueden crear, actualizar o eliminar productos.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // COLECCIÓN: users
    // Los usuarios solo pueden leer y actualizar su propio perfil.
    // Los usuarios pueden crear su propio perfil al registrarse.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // COLECCIÓN: orders
    // Cualquier persona (incluso invitados) puede crear un pedido.
    // Los usuarios pueden leer sus propios pedidos y los administradores pueden leer todos.
    // La lectura de la lista completa de pedidos está permitida para usuarios autenticados,
    // pero el código del cliente SIEMPRE debe filtrar por 'userId' para evitar fugas de datos.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      allow list: if request.auth != null;
      allow update: if isAdmin();
      allow delete: if false; // No se permite eliminar pedidos.
    }
  }
}
