rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check if the user is authenticated and their role in the /users collection is 'admin'.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Collection Rules ---

    // Products:
    // - Anyone, authenticated or not, can read the list of products or a single product.
    // - Only admins can create, update, or delete products.
    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // User Profiles:
    // - Users can create their own profile, but must set their role to 'customer'.
    // - Users can read their own profile. Admins can read any profile.
    // - Admins can update any profile (including changing roles).
    // - A user can update their own profile, but CANNOT change their own role.
    match /users/{userId} {
      allow create: if isOwner(userId) && request.resource.data.role == 'customer';
      allow get: if isOwner(userId) || isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
      allow delete: if false; // Profiles cannot be deleted.
    }

    // Orders:
    // - Anyone (including guests) can create an order.
    // - Registered users can read their own individual orders.
    // - Admins can read any order and list all orders.
    // - A user can only list their own orders via a query.
    // - Only admins can update an order's status.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if (isSignedIn() && resource.data.userId == request.auth.uid) || isAdmin();
      allow list: if isAdmin() || (isSignedIn() && request.query.where[0] == ['userId', '==', request.auth.uid]);
      allow update: if isAdmin();
      allow delete: if false; // Orders cannot be deleted for safety.
    }
  }
}
