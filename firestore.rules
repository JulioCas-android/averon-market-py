rules_version = '2';

// Rules for the Averon Market PY Firestore database
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user has an 'admin' role.
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Collection: products
    // Anyone can view products. Only admins can modify them.
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow write: if isAdmin();
    }

    // Collection: users
    // Users can create and manage their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Collection: orders
    // Anyone can create an order (guest checkout).
    // Admins can manage all orders.
    // Users can view their own orders via queries filtered on the client.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      // WARNING: This allows any logged-in user to query the orders collection.
      // The client-side code MUST filter by userId to prevent data leakage.
      allow list: if request.auth != null;
      allow update: if isAdmin();
      allow delete: if false; // Do not allow orders to be deleted.
    }
  }
}
