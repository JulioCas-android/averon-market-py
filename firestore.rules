rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Return true if the user is authenticated and has the 'admin' role in their user document.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Products: Anyone can read products. Only admins can write them.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users: A user can create their own profile, and can only read or update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Orders: Anyone (even guests) can create an order.
    // Registered users can read their own orders. Admins can read all orders.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      allow list: if request.auth != null; // Client must filter by userId
      allow update: if isAdmin();
      allow delete: if false; // For safety, orders cannot be deleted.
    }
  }
}
