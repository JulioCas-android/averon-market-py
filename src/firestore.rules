rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Revisa si el usuario autenticado tiene el rol de 'admin' en su perfil.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Collection Rules ---

    // Productos:
    // - Cualquiera puede leer la lista de productos o un producto individual.
    // - Solo los administradores pueden crear, actualizar o eliminar productos.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Perfiles de Usuario:
    // - Un usuario puede crear su propio perfil (al registrarse) y su rol debe ser 'customer'.
    // - Un usuario puede leer su propio perfil. Un admin puede leer cualquier perfil.
    // - Un usuario puede actualizar su propio perfil, pero NO PUEDE cambiar su rol.
    // - Solo un admin puede actualizar el rol de un usuario.
    match /users/{userId} {
      allow create: if isOwner(userId) && request.resource.data.role == 'customer';
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
      allow delete: if false; // Por seguridad, no se permite eliminar perfiles.
    }

    // Pedidos:
    // - Cualquiera (incluso invitados) puede crear un pedido.
    // - Los usuarios registrados solo pueden leer sus propios pedidos.
    // - Los administradores pueden leer todos los pedidos.
    // - Un usuario solo puede listar sus propios pedidos, no los de otros.
    // - Solo los administradores pueden actualizar el estado de un pedido.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if (isSignedIn() && resource.data.userId == request.auth.uid) || isAdmin();
      allow list: if isAdmin() || (isSignedIn() && request.query.where[0] == ['userId', '==', request.auth.uid]);
      allow update: if isAdmin();
      allow delete: if false; // Por seguridad, no se permite eliminar pedidos.
    }

    // Ventas (POS):
    // - Solo los administradores pueden leer y escribir en la colecci√≥n de ventas.
    match /sales/{saleId} {
      allow read, write: if isAdmin();
    }
  }
}
