rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an administrator.
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Products:
    // - Anyone can read the list of products or a single product.
    // - Only admins can create, update, or delete products.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users:
    // - A user can create their own profile, but must set their role to 'customer'.
    // - A user can read their own profile. An admin can read any profile.
    // - A user can update their own profile, but CANNOT change their role. An admin can update any profile (including changing roles).
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId && request.resource.data.role == 'customer';
      allow update: if isAdmin() || (request.auth.uid == userId && request.resource.data.role == resource.data.role);
    }

    // Orders:
    // - Anyone (including guests) can create an order.
    // - Registered users can read their own individual orders.
    // - Admins can read any order, and can list all orders.
    // - Users can only list their own orders.
    // - Only admins can update the status of an order.
    // - Orders cannot be deleted for safety.
    match /orders/{orderId} {
      allow create: if true;
      allow get: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      allow list: if isAdmin() || (request.auth != null && request.query.where[0] == ['userId', '==', request.auth.uid]);
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}
